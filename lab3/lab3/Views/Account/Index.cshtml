@{
    var accounts = ViewBag.accounts;
}

<h2>Du lieu dua ra bang ViewBag</h2>
<div class="row">
    @foreach (var item in accounts)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@item.Avatar" style="width:400px"></img>
                <div class="caption">
                    <h3>@item.Name</h3>
                    <p>@item.Bio</p>
                    <p>
                        <a 
                           asp-route="profile"
                           asp-route-id="@item.Id"
                        class="btn btn-success">
                    Profile</a>
                    </p>
                </div>
            </div>
        </div>    
    }
</div>

